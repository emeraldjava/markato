doctype html
html(lang="en")
	head
		title= "Markato Demo"
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin="anonymous")
		link(rel="stylesheet", href="style.css")
		link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/css/bootstrap3/bootstrap-switch.min.css")
		link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")



	body
		nav.navbar.navbar-default.navbar-fixed-top
			.container
				a.navbar-brand Markato
				//button.btn.btn-primary.navbar-btn.pull-right#settings(type='button')
				//	span#cog.glyphicon.glyphicon-cog
				//	span &nbsp; Settings
				input.bs#settingsSwitch(type='checkbox' name='toggle-settings' data-label-text="Settings" data-on-text="Show" data-off-text="Hide" data-inverse='true' checked)

		.container#body
			.row.text-center#switches
				.jumbotron
					.btn-group#transposeGroup(role='group')
						button.btn.btn-default.btn-md#transposeDown(type='button')
							span.glyphicon.glyphicon-chevron-left
						button.btn.btn-info.btn-md#transpose(type='button' data-toggle='modal' data-target='#transposeModal')
							span.key#currentKey G
						button.btn.btn-default.btn-md#transposeUp(type='button')
							span.glyphicon.glyphicon-chevron-right
					br.hidden-sm.hidden-md.hidden-lg
					br.hidden-sm.hidden-md.hidden-lg
					input.bs(type='checkbox' name='toggle-chords' data-label-text="Chords" data-inverse='true' checked)
					input.bs(type='checkbox' name='toggle-lyrics' data-label-text="Lyrics" data-inverse='true' checked)
					br.hidden-sm.hidden-md.hidden-lg
					br.hidden-sm.hidden-md.hidden-lg
					input.bs(type='checkbox' name='toggle-muted' data-label-text="Fade" data-inverse='true' checked)
					input.bs(type='checkbox' name='toggle-section' data-label-text="Sections" data-inverse='true' checked)
					input.bs(type='checkbox' name='toggle-alts' data-label-text="Alternates" data-inverse='true' checked)
					span.hidden-lg.hidden-md.hidden-sm
						br
						hr
						button.btn.btn-link#settings(type='button')
							span.glyphicon.glyphicon-chevron-up

			.row
				.col-sm-12.col-md-6#outputCol
					#canvas
				.col-sm-12.col-md-6#inputCol
					textarea.form-control#input(rows='30')

		.modal.fade#transposeModal(tabindex='-1', role='dialog', aria-labelledby='transposeLabel')
			.modal-dialog(role='document')
				.modal-content
					.modal-header
						button.close(type='button' data-dismiss='modal')
							span &times;
						h4.modal-title Tranpose
					.modal-body.btn-toolbar#transposeToolbar(role='toolbar')
						each chordGroup in [['C'],['C#','Db'],['D'],['D#','Eb'],['E'],['F'],['F#','Gb'],['G'],['G#','Ab'],['A'],['A#','Bb'],['B']]
							.btn-group(role='group')
								each chord in chordGroup
									button.btn.btn-lg.btn-default(type='button' data-transposeChord=chord)= chord
					.modal-footer
						button.btn.btn-default#transposeReset(type='button')
							span Reset to 
								span.key#originalKey

		.modal.fade#alternatesModal(tabindex='-1', role='dialog', aria-labelledby='alternatesLabel')
			.modal-dialog(role='document')
				.modal-content
					.modal-header
						button.close(type='button' data-dismiss='modal')
							span &times;
						h4.modal-title Alternates
					.modal-body
					.modal-footer
						button.btn.btn-default(type='button', data-dismiss='modal')
							span Close
	


	script(src="https://code.jquery.com/jquery-2.1.4.min.js")
	script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS", crossorigin="anonymous")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/js/bootstrap-switch.min.js")
	script(src='build/markato_bundle.js')




